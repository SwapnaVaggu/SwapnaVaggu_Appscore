@model List<PersonSearch.Models.People>

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @*<script src="https://cdn.datatables.net/1.10.5/js/jquery.dataTables.min.js" type="text/javascript"></script>*@
    <link href="~/Assets/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/Assets/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Assets/FlatUi/css/flat-admin.css" rel="stylesheet" />
    <link href="~/Assets/FlatUi/css/theme/blue-sky.css" rel="stylesheet" />
    <link href="~/Assets/FlatUi/css/theme/blue.css" rel="stylesheet" />
    <link href="~/Assets/FlatUi/css/theme/red.css" rel="stylesheet" />
    <link href="~/Assets/FlatUi/css/theme/yellow.css" rel="stylesheet" />
    <link href="~/Assets/app.css" rel="stylesheet" />

    <script src="~/Assets/bootstrap/Jquery-3.1.0.js"></script>
    <script src="~/Assets/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Assets/infra.js"></script>
    <script src="~/Assets/ChartJs/js/chart.bundle.js"></script>
    <script src="~/Assets/ChartJs/js/utils.js"></script>
    <title>@ViewBag.Title - My ASP.NET Application</title>

</head>
<body>

    @using (Html.BeginForm("SimpleSearch", "Search", FormMethod.Post))
    {
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body no-padding">
                        <div class="table-responsive">
                            <table id="modaltable" style="width:100%" class="dataTable table table-striped primary">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Name</th>
                                        <th>Gender</th>
                                        <th>BirthPlace</th>
                                    </tr>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.ID</td>
                                            <td>@item.NAME</td>
                                            <td>@item.GENDER</td>
                                            <td>@item.BIRTHPLACE</td>
                                        </tr>
                                    }
                                </thead>
                                <tbody id="tbodyModal"></tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    }
    </body> 
</html>